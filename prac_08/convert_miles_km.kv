BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            font_size: 48
            multiline: False
            on_text_validate: app.handle_update()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                text: 'Up'
                on_press: app.handle_increment()
            Button:
                text: 'Down'
                on_press: app.handle_decrement()
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculate(input_number.text)
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1)